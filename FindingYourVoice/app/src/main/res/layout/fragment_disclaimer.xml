<?xml version="1.0" encoding="utf-8"?>

<!-- Scroll view for the page-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Constraint layout for the entire page-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Popup_Disclaimer">

        <!-- textview for paragraph1 content-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="352dp"
            android:layout_height="157dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="25dp"
            android:gravity="center|left"
            android:text="@string/para1"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <!-- textview for  paragraph2 content-->
        <TextView
            android:id="@+id/textView13"
            android:layout_width="353dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center|left"
            android:text="@string/para2"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <!-- title Image icon-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="178dp"
            android:layout_height="161dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/group209" />

        <!-- textview for title-->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="196dp"
            android:layout_height="39dp"
            android:layout_marginBottom="15dp"
            android:gravity="center|center_horizontal"
            android:text="Disclaimers "
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <!-- chatbot Image icon-->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="39dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/chat_icon" />

        <!-- view for divider-->
        <View
            android:id="@+id/divider"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:layout_marginStart="168dp"
            android:layout_marginBottom="20dp"
            android:background="#009688"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <!-- Image of funded sponsor of bvc-->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="253dp"
            android:layout_height="57dp"
            android:layout_marginBottom="90dp"
            android:background="#272525"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/bvcschool" />

        <!-- Image of funded sponsor of sodexo-->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="136dp"
            android:layout_height="97dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/sodexologo" />

        <!-- Image of funded sponsor of annotation -->
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="151dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/annotation" />

        <!-- textview for title of sponsor-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/in_partnership"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <!-- Image of funded sponsor of government of alberta-->
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/government" />

        <!-- textview for title of funded sponsor-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="@string/funded_by_alberta"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>